import {getRandomArrayIndex} from './util.js';
import {NAMES, NUMBER_OF_LIKES, ID, RANDOM_AVATAR, PHOTO_COUNT, PHOTO_DESCRIPTIONS, COMMENTS, userPhotos} from './data.js';

const createPhotoDescriptions = function () {
  for (let i = 1; i <= PHOTO_COUNT; i++) {
    userPhotos.push({
      id: i,
      url: `photos/${i}.jpg`,
      description: getRandomArrayIndex(PHOTO_DESCRIPTIONS),
      likes: NUMBER_OF_LIKES,
      comments: [{
        id: i * ID,
        avatar: `img/avatar-${RANDOM_AVATAR}.svg`,
        message: getRandomArrayIndex(COMMENTS),
        name: getRandomArrayIndex(NAMES)
      }]
    });
  }
};

export {createPhotoDescriptions};
